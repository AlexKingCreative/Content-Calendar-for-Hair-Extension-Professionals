{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "ios": {
        "image": "macos-sonoma-14.6-xcode-16.1"
      },
      "android": {
        "buildType": "app-bundle",
        "image": "ubuntu-24.04-jdk-21-ndk-27",
        "env": {
          "EXPO_ANDROID_GRADLE_PROPERTIES": "android.targetSdkVersion=35"
        }
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "hello@hairpro360.com",
        "ascAppId": "6757116246",
        "appleTeamId": "JKUC8LL38N"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "production"
      }
    }
  }
}
